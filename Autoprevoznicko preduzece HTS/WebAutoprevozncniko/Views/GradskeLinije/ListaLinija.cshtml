                        <li><a href="/Karta">Vrati nazad</a></li>
                        <li>Lista linija</li>
                    </ol>*@
            </div>
        </div>
    </section>

    <form class="table">
        <table>

            <tr>
                <td>Broj autobusa</td>
                <td>Zona</td>
                <td>Stanica polaska</td>
                <td>Stanica dolaska</td>
                <td>Obrisi</td>
                <td>Uredi</td>
            </tr>
            @foreach (GradskaLinijaPrikaziVM gl in gradskeLinije)
            {
                <tr>
                    <td>@gl.brojAutobusa</td>
                    <td>@gl.zona</td>
                    <td>@gl.stanicaPolaska</td>
                    <td>@gl.stanicaDolaska</td>
                    <td>
                        <a class="btn btn-danger" href="/GradskeLinije/Obrisi?ID=@gl.ID">Obrisi</a>
                    </td>
                    <td>
                        <a class="btn btn-warning" href="/GradskeLinije/Uredi?ID=@gl.ID">Uredi</a>
                    </td>
                </tr>
            }
        </table>

    </form>
    <br />
    <a class="btn btn-secondary" href="/GradskeLinije">Vrati nazad</a>
}


@using Autoprevoznicko_preduzece_HTS.Model;
@using WebAutoprevozncniko.ViewModels;
@using Microsoft.Extensions.DependencyInjection;
@using Microsoft.AspNetCore.Http;
@using WebAutoprevozncniko.Helper
@model WebAutoprevozncniko.ViewModels.GradPrikazVM
@{
    List<Grad> gradovi = (List<Grad>)ViewData["Gradovi"];
    string poruka = (string)TempData["greskaPoruka"];
    Login login = Context.GetLogiraniKorisnik();
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

@if (login == null)
{
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center" style="padding-top:20px">
                <h2>Lista svih gradova</h2>
                @*<ol>
                        <li><a href="/Grad">Vrati nazad</a></li>
                        <li>Lista svih gradova</li>
                    </ol>*@
            </div>
        </div>
    </section>

    <form class="table">
        <table>
            <tr>
                <td>Naziv grada</td>
                <td>Postanski broj</td>
                @*<td>Obrisi grad</td>
                    <td>Uredi grad</td>*@
            </tr>

            @foreach (var g in Model.ListaGradova)
            {
                <tr>
                    <td>@g.nazivGrada</td>
                    <td>@g.PostanskiBroj</td>
                    <!--<td>
                        <a class="btn btn-danger" href="/Grad/ObrisiGrad?ID=@g.ID">Obrisi</a>
                    </td>-->
                    @*<td>
                            <a class="btn btn-warning" href="/Grad/UrediGrad?ID=@g.ID">Uredi podatke grada</a>
                        </td>*@
                    <!--<td>
                        <a class="btn btn-warning" href="/Grad/DodajUredi?GradID=@g.ID">Uredi podatke grada</a>
                    </td>-->
                </tr>
            }
        </table>
        @if (poruka != null)
        {
            <br />
            <br />
            <div class="col-md-6">

                <div class="alert alert-light">@poruka</div>
            </div>
        }

    </form>
    <br />
    <a class="btn btn-secondary" href="/Home">Vrati nazad</a>
}
else
{
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center" style="padding-top:40px">
                <h2>Lista svih gradova</h2>
                @*<ol>
                        <li><a href="/Grad">Vrati nazad</a></li>
                        <li>Lista svih gradova</li>
                    </ol>*@
            </div>
        </div>
    </section>

    <form class="table">
        <table>
            <tr>
                <td>Naziv grada</td>
                <td>Postanski broj</td>
                <td>Obrisi grad</td>
                <td>Uredi grad</td>
            </tr>

            @foreach (var g in Model.ListaGradova)
            {
                <tr>
                    <td>@g.nazivGrada</td>
                    <td>@g.PostanskiBroj</td>
                    <td>
                        <a class="btn btn-danger" href="/Grad/ObrisiGrad?ID=@g.ID">Obrisi</a>
                    </td>
                    @*<td>
                            <a class="btn btn-warning" href="/Grad/UrediGrad?ID=@g.ID">Uredi podatke grada</a>
                        </td>*@
                    <td>
                        <a class="btn btn-warning" href="/Grad/DodajUredi?GradID=@g.ID">Uredi podatke grada</a>
                    </td>
                </tr>
            }
        </table>
        @if (poruka != null)
        {
            <br />
            <br />
            <div class="col-md-6">

                <div class="alert alert-light">@poruka</div>
            </div>
        }

    </form>
    <br />
    <a class="btn btn-secondary" href="/Grad">Vrati nazad</a>
}

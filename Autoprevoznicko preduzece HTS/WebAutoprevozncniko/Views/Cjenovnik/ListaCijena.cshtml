@using Autoprevoznicko_preduzece_HTS.Model;
@using WebAutoprevozncniko.ViewModels;
@using Microsoft.Extensions.DependencyInjection;
@using Microsoft.AspNetCore.Http;
@using WebAutoprevozncniko.Helper
@{
    Layout = "_Layout";
    ViewData["Title"] = "ListaCijena";
    List<CjenovnikPrikaziVM> cijene = (List<CjenovnikPrikaziVM>)ViewData["Cjenovnik"];
    Login login = Context.GetLogiraniKorisnik();
    MyContext _context = Context.RequestServices.GetService<MyContext>();
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>


@if (login == null)
{
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center" style="padding-top:20px">
                <h2>Lista cijena </h2>
                @*<ol>
                        <li><a href="/Cjenovnik">Vrati nazad</a></li>
                        <li>Lista cijena</li>
                    </ol>*@
            </div>
        </div>
    </section>
    <form class="table">
        <table>
            <tr>
                <td>Zona</td>
                <td>Vrsta karte</td>
                <td>Tip karte</td>
                <td>Cijena</td>
                @*<td>Obrisi</td>
                    <td>Uredi</td>*@
            </tr>

            @foreach (CjenovnikPrikaziVM c in cijene)
            {
                <tr>
                    <td>@c.zona</td>
                    <td>@c.VrstaKarte</td>
                    <td>@c.tipKarte</td>
                    <td>@c.Cijena <span>KM</span></td>
                    @*<td>
                            <a class="btn btn-danger" href="/Cjenovnik/Obrisi?ID=@c.ID">Obrisi</a>
                        </td>
                        <td>
                            <a class="btn btn-warning" href="/Cjenovnik/Uredi?ID=@c.ID">Uredi</a>
                        </td>*@
                </tr>
            }
        </table>
    </form>
    <br />
    <a class="btn btn-secondary" href="/Home">Vrati nazad</a>
}
else if (_context.vozac.Where(x => x.loginID == login.ID).FirstOrDefault() != null)
{
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center" style="padding-top:40px">
                <h2>Lista cijena </h2>
                @*<ol>
                        <li><a href="/Cjenovnik">Vrati nazad</a></li>
                        <li>Lista cijena</li>
                    </ol>*@
            </div>
        </div>
    </section>
    <form class="table">
        <table>
            <tr>
                <td>Zona</td>
                <td>Vrsta karte</td>
                <td>Tip karte</td>
                <td>Cijena</td>
                @*<td>Obrisi</td>
                    <td>Uredi</td>*@
            </tr>

            @foreach (CjenovnikPrikaziVM c in cijene)
            {
                <tr>
                    <td>@c.zona</td>
                    <td>@c.VrstaKarte</td>
                    <td>@c.tipKarte</td>
                    <td>@c.Cijena <span>KM</span></td>

                    @*<td>
                            <a class="btn btn-danger" href="/Cjenovnik/Obrisi?ID=@c.ID">Obrisi</a>
                        </td>
                        <td>
                            <a class="btn btn-warning" href="/Cjenovnik/Uredi?ID=@c.ID">Uredi</a>
                        </td>*@
                </tr>
            }
        </table>
    </form>
    <br />
    <a class="btn btn-secondary" href="/Home">Vrati nazad</a>
}
else
{
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center" style="padding-top:40px">
                <h2>Lista cijena </h2>
                @*<ol>
                        <li><a href="/Cjenovnik">Vrati nazad</a></li>
                        <li>Lista cijena</li>
                    </ol>*@
            </div>
        </div>
    </section>
    <form class="table">
        <table>
            <tr>
                <td>Zona</td>
                <td>Vrsta karte</td>
                <td>Tip karte</td>
                <td>Cijena</td>
                <td>Obrisi</td>
                <td>Uredi</td>
            </tr>

            @foreach (CjenovnikPrikaziVM c in cijene)
            {
                <tr>
                    <td>@c.zona</td>
                    <td>@c.VrstaKarte</td>
                    <td>@c.tipKarte</td>
                    <td>@c.Cijena <span>KM</span></td>

                    <td>
                        <a class="btn btn-danger" href="/Cjenovnik/Obrisi?ID=@c.ID">Obrisi</a>
                    </td>
                    <td>
                        <a class="btn btn-warning" href="/Cjenovnik/Uredi?ID=@c.ID">Uredi</a>
                    </td>
                </tr>
            }
        </table>
    </form>
    <br />
    <a class="btn btn-secondary" href="/Cjenovnik">Vrati nazad</a>
}



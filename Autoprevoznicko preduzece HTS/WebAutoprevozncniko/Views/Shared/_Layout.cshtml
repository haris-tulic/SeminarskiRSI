            });

            notificationHub.on("ReceiveNotification", function (poruka) {
                notificirajAutobus(poruka);
            });
        });
    function notificirajAutobus(poruka) {
        Push.create("Autobus.io", {
            body: poruka,
          
            timeout: 10000,
            onClick: function () {
                window.focus();
                this.close();
            }
        });
    }
</script>

@using Autoprevoznicko_preduzece_HTS.Model;
@using WebAutoprevozncniko.ViewModels;
@{
    ViewData["Title"] = "UrediVozaca";
    Vozac vozac = (Vozac)ViewData["vozac"];
    List<ComboBox> login = (List<ComboBox>)ViewData["Login"];
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
<section class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>Unesite vozaca</h2>
            <ol>
                <li><a href="/Vozac">Vrati nazad</a></li>
                <li>Unesite vozaca</li>
            </ol>
        </div>
    </div>
</section>
<form action="/Vozac/SpasiUredi">
    <input style="display:none" name="VozacID" value="@vozac.ID" />
    <div class="form-group">
        <label>Ime vozaca</label>
        <input class="form-control" name="Ime" value="@vozac.Ime" />
    </div>

    <div class="form-group">
        <label>Prezime vozaca</label>
        <input class="form-control" name="Prezime" value="@vozac.Prezime" />
    </div>

    <div class="form-group">
        <label>Datum rodjenja vozaca</label>
        <input class="form-control" name="Datum" value="@vozac.DatumRodjenja" />
    </div>

    <div class="form-group">
        <label>Datum rodjenja vozaca</label>
        <input class="form-control" name="Email" value="@vozac.email" />
    </div>
    <div class="form-group">
        <label>Datum rodjenja vozaca</label>
        <input class="form-control" name="VozackaKategorija" value="@vozac.VozackaKategorija" />
    </div>
    <div class="form-group">
        <select class="form-control" name="LoginID">
            <option style="color:green;background-color:yellow">Odaberite login</option>
            @foreach (ComboBox v in login)
            {
                if (v.ID == vozac.ID)
                {
                    <option selected value="@v.ID">@v.naziv</option>
                }
                <option value="@v.ID">@v.naziv</option>
            }
        </select>
    </div>
    <input type="submit" value="Snimi" />
</form>
<a href="/Vozac">Vrati nazad</a>
